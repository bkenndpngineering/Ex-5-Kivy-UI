<MainScreen>:

    name: 'main'
    FloatLayout:
        size_hint: None, None

    Switch:
        id: motor_toggle_two
        y: root.height * .5 - 200
    Label:
        text: "ON" if motor_toggle_two.active else "OFF"
        y: root.height *.5 - 230
        color: 0,0,0,1

    Slider:
        id: slider
        min: 0
        max: 100
        step: 1
        orientation: 'horizontal'
        y: root.height *.5 - 100
    Label:
        text: str(slider.value)
        y: root.height * .5 - 100
        color: 0, 0, 0, 1



    DPEAButton: # DONE
        id: test_button
        text: "OFF" if test_button.state == "normal" else "ON"
        size: 100, 100
        x: root.width * 0.75
        y: root.height * 0.5
        color: 0, 1, 0, 1
        #on_press: root.pressed()

    DPEAButton: # DONE
        id: counter_button
        text: root.counter
        size: 100, 100
        x: root.width * 0.25
        y:root.height * 0.5
        color: 1, 0, 0, 1
        on_press: root.pressed_counter()

    DPEAButton:
        id: motor_toggle
        #text: "motor on" if root.toggle else "motor off"
        text: "motor"
        size: 100, 100
        x: root.width * 0.5
        y: root.height * 0.5
        color: 1, 0, 0, 1
        on_press: root.pressed_motor_toggle()

    Label:
        id: motor_label
        text: "motor on" if root.toggle else "motor off"
        color: 0, 0, 0, 1

    ImageButton:
        id: image_button
        source: "../../pidev/kivy/images/DPEALogoTransparent.png"
        size: 100,100
        x: root.width * 0.5
        y: 150
        on_press: root.pressed()

